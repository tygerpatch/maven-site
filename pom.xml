            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-linkcheck-plugin</artifactId>
            <version>1.0-SNAPSHOT</version>
            <configuration>
              <excludedLinks>
                <excludedLink>**/ant-tasks/*</excludedLink>
